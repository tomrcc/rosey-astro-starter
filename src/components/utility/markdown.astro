---
import markdownit from 'markdown-it';
import slugify from 'slugify';
const md = markdownit({ html: true });
const { content } = Astro.props;

const generateRoseyID = (text: string) => {
  const lowerCaseText = text.toLowerCase();
  const formattedText = lowerCaseText
    .replaceAll(/(?:__[*#])|\[(.*?)\]\(.*?\)/gm, /$1/)
    .slice(0, 100);
  const slugifiedText = slugify(formattedText, { remove: /[.*,:\/]/g });

  return `${Astro.url.pathname}-${Astro.self.name}-${slugifiedText}`;
};
---

<!-- This is styled in src/styles/_markdown.scss, which also styles the blog markdown text -->
<div
  class="markdown-text"
  data-rosey-ns="markdown"
  data-rosey={generateRoseyID(content)}
  set:html={md.render(content)}
/>
